@using memorunder.Common

@{
    //View内の処理を記述
    Calendar calendar = new Calendar();

    string[] weeks = calendar.CreateCalendar();

}

@section Styles {
    <link rel="stylesheet" href="~/css/Diary/style.css" />
}

<div class="diary-top">
    <div class="pagination">
        <div class="paginatiojn-item pagination-left">
            <p>@(ViewBag.month - 1) 月</p>
        </div>
        <div class="paginatiojn-item pagination-center">
            <p>@ViewBag.month 月</p>
        </div>
        <div class="paginatiojn-item pagination-right">
            <p>@(ViewBag.month + 1) 月</p>
        </div>
    </div>
    <div class="calendar">
        <table class="table table-bordered">
            <tr>
                <th>日</th>
                <th>月</th>
                <th>火</th>
                <th>水</th>
                <th>木</th>
                <th>金</th>
                <th>土</th>
            </tr>
            @foreach(string weekItem in weeks)
      {
        <tr>@Html.Raw(weekItem)</tr>
      }
        </table>
    </div>

    @Html.ActionLink("追加ボタン", "Create")
</div>